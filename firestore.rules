rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir que los usuarios lean/escriban sus propios documentos
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para proyectos - permitir acceso a usuarios autenticados
    match /projects/{projectId} {
      // Solo los usuarios en la lista de 'authorizedUsers' pueden leer.
      allow read: if request.auth != null && request.auth.uid in resource.data.authorizedUsers;

      // Solo los usuarios con rol 'admin' o 'administrador' en la lista pueden escribir.
      // Asumiendo que authorizedUsers es una lista de objetos: [{uid: '...', role: '...'}]
      allow write: if request.auth != null && request.auth.uid in resource.data.authorizedUsers.map(u => u.uid) &&
                      (resource.data.authorizedUsers.filter(u => u.uid == request.auth.uid)[0].role == 'admin' ||
                       resource.data.authorizedUsers.filter(u => u.uid == request.auth.uid)[0].role == 'administrador');
    }
  }
}